<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<RelativeLayout
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/btn_itemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lyAtas"
                android:background="@color/colorUtama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                    android:textColor="@color/colorWhite"
                    android:text="Header"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="Header"/>



                    <TextView
                        android:text="From"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorWhite"
                        android:layout_centerVertical="true"
                        android:paddingBottom="5dp"
                       android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"/>


                </RelativeLayout>





            </LinearLayout>


            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lay_patient"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:text="Nama Pasien"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>

                        <TextView

                            android:textStyle="bold"
                            android:text=": Patient Name"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>


                    </LinearLayout>


                    <LinearLayout
                    android:id="@+id/lay_caseId"
                        android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:text="Case ID"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>

                    <TextView

                        android:textStyle="bold"
                        android:text=": 123456"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/CaseID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>


                </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:text="Room"
                            android:layout_marginLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>

                        <TextView
                            android:textStyle="bold"
                            android:text=": Room"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/officeRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:text="Status"
                            android:layout_marginLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>

                        <TextView
                            android:textStyle="bold"
                            android:text=": Booking"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>


                    </LinearLayout>






                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="10dp"
                            android:paddingBottom="10dp"
                            android:textStyle="bold"
                            android:id="@+id/tvBody"
                            android:text="Status Pasien Telah berubah menjadi booking"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"/>


                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyBawah"
                android:background="@color/colorUtama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="20dp"
                        android:text="New"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:paddingLeft="0dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvNewest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>


                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:text="00:00"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>


                </RelativeLayout>





            </LinearLayout>





        </LinearLayout>






    </androidx.cardview.widget.CardView>

    </LinearLayout>






</RelativeLayout>




</RelativeLayout>